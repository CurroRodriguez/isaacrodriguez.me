---
import { siteConfig } from '@/data/site.config'

import LinkedinIcon from './icons/linkedinIcon.astro'
import BlueskyIcon from './icons/BlueskyIcon.astro'
const message = siteConfig.shareMessage

const URL = Astro.url.href
const linkedinShareLink = `https://www.linkedin.com/shareArticle?mini=true&url=${URL}`
const blueskyShareLink = `https://bsky.app/intent/compose?text=${URL}`
---

<div class='flex flex-col gap-2'>
	<span class='mb-1 font-bold text-2xl'>Share</span>
	<ul class='flex gap-3 text-black dark:text-white'>
		<li>
			<a href=`${linkedinShareLink}` aria-label='Share on LinkedIn'>
				<LinkedinIcon />
			</a>
		</li>
		<li>
			<a href=`${blueskyShareLink}` aria-label='Share on Bluesky'>
				<BlueskyIcon />
			</a>
		</li>
	</ul>
</div>
